{
  "name": "sunnysideup/basic-auth-better",
  "description": "Adds basic auth to your Silverstripe website the way it was intended (not just for pages, also for files).",
  "type": "silverstripe-vendormodule",
  "keywords": [
    "Security",
    "Assets",
    "Basic Auth",
    "Authentication",
    "Login",
    "Log-in",
    "Staging",
    "Stage",
    "Pre-Production",
    "Test Site"
  ],
  "license": "BSD-3-Clause",
  "require": {
    "silverstripe/framework": "^5.0",
    "silverstripe/admin": "^2.0"
  },
  "require-dev": {
    "sunnysideup/sswebpack_engine_only": "dev-master",
    "silverleague/ideannotator": "*",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.7",
    "silverstripe/standards": "^1",
    "phpstan/extension-installer": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Sunnysideup\\BasicAuthBetter\\": "src/"
    }
  },
  "extra": {
    "expose": [
      "client/dist"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Nicolaas Thiemen Francken",
      "email": "modules@sunnysideup.co.nz",
      "role": "lead developer"
    }
  ]
}
